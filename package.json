{
  "name": "pades-bt-eprescription-poc",
  "version": "1.0.0",
  "description": "PAdES-B-T compliant ePrescription POC with CPS card integration",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter @pades-poc/backend dev\" \"pnpm --filter @pades-poc/frontend dev\"",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test:coverage",
    "clean": "pnpm -r clean",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "install:all": "pnpm install",
    "dev:backend": "pnpm --filter @pades-poc/backend dev",
    "dev:frontend": "pnpm --filter @pades-poc/frontend dev",
    "build:backend": "pnpm --filter @pades-poc/backend build",
    "build:frontend": "pnpm --filter @pades-poc/frontend build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.4.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0"
  },
  "keywords": [
    "pades",
    "eprescription",
    "cps-card",
    "digital-signature",
    "healthcare"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.6"
}
